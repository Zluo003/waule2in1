# ============================================
# Waule 服务端环境变量配置示例
# 复制此文件为 .env 并填入实际值
# ============================================

# 数据库配置（必填）
DATABASE_URL=

# JWT 密钥（必填，至少32位随机字符串）
# 生成方法: openssl rand -base64 32
JWT_SECRET=

# CORS 配置
CORS_ORIGIN=
CORS_ORIGINS=
ALLOW_ALL_CORS=true
PUBLIC_BASE_URL=

# 日志级别
LOG_LEVEL=info

# 分页配置
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# 速率限制
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500

# 百度翻译 API
BAIDU_TRANSLATE_APPID=
BAIDU_TRANSLATE_SECRET=


# ============================================
# 阿里云配置
# ============================================

# OSS 对象存储
OSS_BUCKET=
OSS_REGION=
OSS_ACCESS_KEY_ID=
OSS_ACCESS_KEY_SECRET=
OSS_USE_ACCELERATE=true
STORAGE_TYPE=oss
OSS_CDN_DOMAIN=
SKIP_SERVER_TRANSFER=true

# 阿里云短信服务
ALIYUN_ACCESS_KEY_ID=
ALIYUN_ACCESS_KEY_SECRET=
ALIYUN_SMS_SIGN_NAME=速通互联验证码
ALIYUN_SMS_TEMPLATE_CODE=100001
ALIYUN_SMS_USE_DYPNS=true
ALIYUN_SMS_TEMPLATE_PARAM={"code":"{{code}}","min":"5"}

# 阿里云内容安全（复用 OSS 的 AccessKey，需要开通绿网服务）
# 默认使用 cn-shanghai 区域，如需更改请设置 CONTENT_MODERATION_REGION
CONTENT_MODERATION_REGION=cn-shanghai


# waule-api 网关地址（启用后 Midjourney 也会走这里）
WAULEAPI_URL=
WAULEAPI_SECRET=
