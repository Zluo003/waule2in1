# ============================================
# Waule 服务端环境变量配置示例
# 复制此文件为 .env 并填入实际值
# ============================================

# 数据库配置（必填）
DATABASE_URL=postgresql://用户名:密码@localhost:5432/数据库名

# JWT 密钥（必填，至少32位随机字符串）
# 生成方法: openssl rand -base64 32
JWT_SECRET=
WAULEAPI_SECRET=

# CORS 配置
CORS_ORIGIN=https://your-domain.com
CORS_ORIGINS=https://your-domain.com
ALLOW_ALL_CORS=false
PUBLIC_BASE_URL=https://your-domain.com

# 日志级别
LOG_LEVEL=warn

# 分页配置
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# 速率限制
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500

# ============================================
# AI 服务配置（按需填写）
# ============================================

# OpenAI
OPENAI_API_KEY=

# Midjourney 模式: discord 或 proxy
MIDJOURNEY_MODE=discord

# Discord 配置（Midjourney Discord 模式）
DISCORD_USER_TOKEN=
DISCORD_GUILD_ID=
DISCORD_CHANNEL_ID=
DISCORD_IMAGINE_COMMAND_ID=
DISCORD_IMAGINE_VERSION_ID=

# Midjourney Proxy 配置（Proxy 模式）
MIDJOURNEY_PROXY_URL=
MIDJOURNEY_API_SECRET=

# 百度翻译 API
BAIDU_TRANSLATE_APPID=
BAIDU_TRANSLATE_SECRET=

# Sora API
SORA_API_KEY=
SORA_API_URL=

# MiniMax 回调地址
MINIMAX_CALLBACK_PUBLIC_URL=

# ============================================
# 阿里云配置
# ============================================

# OSS 对象存储
OSS_BUCKET=
OSS_REGION=oss-cn-beijing
OSS_ACCESS_KEY_ID=
OSS_ACCESS_KEY_SECRET=
OSS_USE_ACCELERATE=true
STORAGE_TYPE=oss
SKIP_SERVER_TRANSFER=true

# 阿里云短信服务
ALIYUN_ACCESS_KEY_ID=
ALIYUN_ACCESS_KEY_SECRET=
ALIYUN_SMS_SIGN_NAME=
ALIYUN_SMS_TEMPLATE_CODE=
ALIYUN_SMS_USE_DYPNS=true
ALIYUN_SMS_TEMPLATE_PARAM={"code":"{{code}}","min":"5"}

# 阿里云内容安全（复用 OSS 的 AccessKey，需要开通绿网服务）
# 默认使用 cn-shanghai 区域，如需更改请设置 CONTENT_MODERATION_REGION
CONTENT_MODERATION_REGION=cn-shanghai

# ============================================
# 代理配置（可选）
# ============================================

# SOCKS5 代理（用于 Discord/Gemini 等需要代理的服务）
SOCKS_PROXY=
